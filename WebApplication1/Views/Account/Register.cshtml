@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">Hoşgeldiniz..</h1>
    </div>
    <p class="border-bottom text-center pb-2">Kayıt olmak için lütfen aşağıda istenen bilgileri girin ve kayıt ol butonuna basın.</p>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" placeholder="bir isim gir" />
                <span asp-validation-for="Username"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for ="Password" class="form-control" placeholder="bir şifre gir" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Şifre</label>
                <input asp-for="RePassword" class="form-control" placeholder="şifreyi tekrar gir" />
                <span asp-validation-for="RePassword"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-user-plus me-2"></i>Kayıt Ol</button>
            </div>
        </form>
    </div>
</div>